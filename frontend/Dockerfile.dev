# frontend/Dockerfile.dev
# Development Dockerfile - uses Vite dev server with hot reload
FROM node:20-alpine

WORKDIR /app

# Copy only package.json (not lock file) for cross-platform compatibility
COPY package.json ./
RUN npm install

# Copy entrypoint script that syncs deps when package.json changes
COPY docker-entrypoint.sh /docker-entrypoint.sh
RUN chmod +x /docker-entrypoint.sh

COPY . .

EXPOSE 5173

ENTRYPOINT ["/docker-entrypoint.sh"]
CMD ["npm", "run", "dev"]
