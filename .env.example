# .env.example
# Database
DATABASE_URL=postgresql://cyroid:cyroid@db:5432/cyroid

# Redis
REDIS_URL=redis://redis:6379/0

# MinIO
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=cyroid
MINIO_SECRET_KEY=cyroid123
MINIO_BUCKET=cyroid-artifacts

# JWT
JWT_SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# App
DEBUG=true

# Data directory for ISO cache, templates, VM storage
# macOS: REQUIRED - Use ~/.cyroid (must be under /Users for Docker Desktop file sharing)
# Linux: Use /data/cyroid or any accessible path
#
# macOS example (replace 'yourname' with your username):
# CYROID_DATA_DIR=/Users/yourname/.cyroid
#
# Linux example:
# CYROID_DATA_DIR=/data/cyroid
